# Use a base image with Node.js to build the Angular app
FROM node:14 AS builder

# Set the working directory in the container
WORKDIR /sportgh

# Copy the package.json and package-lock.json files to the container
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the entire Angular app source code to the container
COPY . .

# Build the Angular app
RUN npm run build --prod

# Use a lightweight web server to serve the Angular app
FROM nginx:alpine

# Copy the built Angular app from the builder stage to the web server directory
COPY --from=builder /sportgh/dist/webapp /usr/share/nginx/html
