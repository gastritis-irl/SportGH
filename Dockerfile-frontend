FROM node:18.14.2-alpine3.17 as build

# Set the working directory inside the container
WORKDIR /usr/src/app

# Copy package.json and package-lock.json to the working directory
COPY package*.json ./

# Install Angular dependencies
RUN npm install

# Copy all files from the current directory to the working directory
COPY . .

# Build the Angular app for production
RUN npm run build --prod

# Stage 2: Setup Nginx to serve the app
FROM nginx:alpine

# Remove default Nginx configurations
RUN rm -rf /etc/nginx/conf.d/*

# Copy the built Angular app from the previous stage to the Nginx public directory
COPY --from=build /usr/src/app/dist/webapp /usr/share/nginx/html

# Expose the port Nginx listens on (usually 80)
EXPOSE 4200

# Start Nginx when the container starts
CMD ["nginx", "-g", "daemon off;"]

